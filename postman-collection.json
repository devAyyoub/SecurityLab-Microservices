{
	"info": {
		"name": "Microservices Communication Test",
		"description": "Collection para probar comunicación entre ReservationMS y StudentMS",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. OAuth2 - Get Token (Client Credentials)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "reservationms",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "Eyt3YKuZWzj1zQY2rWxivpsfnYCmhfL8",
							"type": "text"
						},
						{
							"key": "scope",
							"value": "student.read",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "http://localhost:8080/realms/securityms/protocol/openid-connect/token",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"realms",
						"securityms",
						"protocol",
						"openid-connect",
						"token"
					]
				},
				"description": "Obtener token OAuth2 usando client credentials flow"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    pm.collectionVariables.set('access_token', jsonData.access_token);",
							"    console.log('Token guardado automáticamente en la variable access_token');",
							"    console.log('Token (primeros 20 caracteres):', jsonData.access_token.substring(0, 20) + '...');",
							"} else {",
							"    console.log('Error al obtener token:', pm.response.text());",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"response": []
		},
		{
			"name": "2. StudentMS - Get Student by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "http://localhost:8084/students/1",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8084",
					"path": [
						"students",
						"1"
					]
				},
				"description": "Obtener estudiante por ID. Requiere token con rol student.read"
			},
			"response": []
		},
		{
			"name": "3. StudentMS - Create Student",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"firstName\": \"John\",\n    \"school\": \"MIT\",\n    \"age\": 22,\n    \"inc\": 123456\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:8084/students",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8084",
					"path": [
						"students"
					]
				},
				"description": "Crear un nuevo estudiante"
			},
			"response": []
		},
		{
			"name": "4. ReservationMS - Create Reservation",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "http://localhost:8086/reservations?studentId=1",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8086",
					"path": [
						"reservations"
					],
					"query": [
						{
							"key": "studentId",
							"value": "1",
							"description": "ID del estudiante"
						}
					]
				},
				"description": "Crear reserva. Internamente llama a StudentMS para validar el estudiante"
			},
			"response": []
		},
		{
			"name": "5. ReservationMS - Get Reservation by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "http://localhost:8086/reservations/1",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8086",
					"path": [
						"reservations",
						"1"
					]
				},
				"description": "Obtener reserva por ID"
			},
			"response": []
		},
		{
			"name": "6. ReservationMS - Get Student for Reservation",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "http://localhost:8086/reservations/1/student",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8086",
					"path": [
						"reservations",
						"1",
						"student"
					]
				},
				"description": "Obtener información del estudiante asociado a una reserva. Internamente llama a StudentMS"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		}
	]
}
